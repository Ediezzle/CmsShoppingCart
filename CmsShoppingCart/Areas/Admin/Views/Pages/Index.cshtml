@model IEnumerable<CmsShoppingCart.Models.ViewModels.Pages.PageVM>

@{
    ViewBag.Title = "Pages";
}

<h2>Pages</h2>

<p>
    @Html.ActionLink("Add New Page", "AddPage")
</p>


@if (!Model.Any())
{
    <h1 class="text-center">There are no pages</h1>
}

else
{
    <table class="table">
        <tr>
            <th>
                Title
            </th>
            <th>
                Slug
            </th>
          <!--  <th>
                Body
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sorting)
            </th> -->
            <th>
                SideBar
            </th> 
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slug)
        </td>
        <!-- <td>
        @Html.DisplayFor(modelItem => item.Body)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sorting)
    </td>-->
        <td>
            @Html.DisplayFor(modelItem => item.HasSideBar)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPage", new { id = item.Id }) |
            @Html.ActionLink("Details", "PageDetails", new { id = item.Id }) |
            @Html.ActionLink("Delete", "DeletePage", new { id = item.Id })
        </td>
    </tr>
        }

    </table>
}


